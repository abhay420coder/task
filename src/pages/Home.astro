<!-- ========== Header section Start ========== -->
<HomeHeader />
<!-- ========== Header section End ========== -->

<!-- ========== hero section Start ========== -->
<section id="heroSection" class="heroSection containers flex items-center max-tabletLand:pt-[34rem] max-tabletPot:pt-[25rem]">
  <div class="flex-[0.5] flex flex-col gap-2.5">
    <AnimationCard className="flex items-start h-fit" transitionName="slide-up">
      <h1 class="heroSectionH1 primary-font-family">
        Grow your business with Akeshya
      </h1>
    </AnimationCard>
    <AnimationCard
      className="flex items-start "
      transitionName="slide-up"
      transitionDelay="400ms"
    >
      <h2 class="heroSectionH2 primary-font-family">
        We are team of talented website designers, developers &amp; digital
        marketeers
      </h2>
    </AnimationCard>
    <AnimationCard
      className="flex items-start "
      transitionName="slide-up"
      transitionDelay="800ms"
    >
      <a href="#about" class="secondary-button">Get Started</a>
    </AnimationCard>
  </div>
  <div class="flex-[0.5]">
    <AnimationCard 
      transitionName="slide-left"
      animationName="shakeY"
      animationDuration="15s"
      animationIterationCount="infinite"
      animationDelay="300ms"
      className="max-tabletLand:justify-center max-tabletLand:items-center flex"
    >
      <img src="/src/assets/img/hero-img.png" class="heroSectionImg" />
