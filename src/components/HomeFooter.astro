<script>

document.addEventListener('DOMContentLoaded', function() {
        const header = document.getElementById('header-nav');
        const scrollToHeroButton = document.getElementById('scrollToHeroButton');
        const heroSection = document.getElementById('heroSection');

        // Add scroll event listener
        window.addEventListener('scroll', function() {
            if (window.scrollY > 0) {
                header?.classList.add('header-scroll');
                scrollToHeroButton!.style.display = 'block';
            } else {
                header?.classList.remove('header-scroll');
                scrollToHeroButton!.style.display = 'none';
            }
        });

        // Add click event listener to the scroll-to-hero button
            scrollToHeroButton?.addEventListener('click', function() {
            heroSection?.scrollIntoView({ behavior: 'smooth' });
        });
});
</script>